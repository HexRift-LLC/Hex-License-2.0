  <footer>
    <div class="cyber-grid-bg" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 0; opacity: 0.05;"></div>
    
    <div class="container">
      <div class="footer-content flex flex-wrap items-center justify-between py-4">
        <!-- Brand/Copyright section -->
        <div class="footer-brand-section">
          <span class="footer-brand text-gradient"><%= config.server.name %></span>
          <span class="mx-2 text-gray-500">|</span>
          <span>Â© <%= new Date().getFullYear() %> All Rights Reserved</span>
        </div>
        
        <!-- Links section - horizontal -->
        <div class="footer-links-wrapper flex items-center gap-6 my-2">
          <span class="text-gray-300">Links</span>
          <span class="mx-1 text-gray-500">|</span>
          <a href="/privacy">Privacy Policy</a>
          <a href="/terms">Terms of Service</a>
          <a href="/contact">Contact</a>
        </div>
        
        <!-- Social section -->
        <div class="footer-social-wrapper flex items-center gap-4">
          <span class="text-gray-300">Follow Us</span>
          <div class="footer-social flex gap-3">
            <a href="#" aria-label="Discord"><i class="fab fa-discord"></i></a>
            <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
            <a href="#" aria-label="GitHub"><i class="fab fa-github"></i></a>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Decorative border -->
    <div style="height: 1px; background: linear-gradient(90deg, transparent, var(--primary-color), var(--secondary-color), var(--primary-color), transparent);"></div>
  </footer>

  <!-- Custom script for footer animations -->
  <script>
    // Add subtle pulse animation to footer elements
    document.addEventListener('DOMContentLoaded', function() {
      const footerLinks = document.querySelectorAll('footer a');
      
      footerLinks.forEach(link => {
        link.addEventListener('mouseenter', function() {
          this.style.textShadow = `0 0 10px var(--primary-glow)`;
        });
        
        link.addEventListener('mouseleave', function() {
          this.style.textShadow = '';
        });
      });
    });
  </script>

  <!-- Bootstrap JS with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Custom JS -->
  <script src="/js/main.js"></script>
